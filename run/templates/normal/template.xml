                </ImageLayer>
                <ImageLayer id="land">
                    <conditions>
                        <IsPresent key="frame_effects.compasslanddfc"/>
                        <IsEquals key="proximity.front_face" value="false"/>
                    </conditions>
                </ImageLayer>
                <ImageLayer id="eldrazi moon">
